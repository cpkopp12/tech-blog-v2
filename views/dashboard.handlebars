<div class="container">
    <form id="dashboardForm" class="card">
        <h5 class="card-header">Create New Post</h5>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                <label for="post-title">Title</label>
                <input type="text" id="postTitle" name="post-title" />
            </li>
            <li class="list-group-item">
                <label for="post-text">Text</label>
                <textarea id="postText" name="post-text"></textarea>
            </li>
            <li class="list-group-item">
                <button id="dashboardFormBtn" type="submit" class="btn btn-primary">Post</button>
            </li>
        </ul>
    </form>
</div>

{{#if posts.length}}
    <div class="container mt-4">
        <h5>Your Posts</h5>
        {{#each posts as |post|}}
            {{> post-info post}}
            <a href="/dashboard/edit/{{post.id}}" class="btn btn-info mb-4">Edit Post</a>
        {{/each}}
    </div>
{{/if}}

<script src="/javascript/add-post.js"></script>






