    <div class="card mt-2">
        <h5 class="card-header">{{user.username}} on {{format_date created_at}}</h5>
        <div class="card-body">
            <h5 class="card-title">{{title}}</h5>
            <p class="card-text">{{post_text}}</p>
            <a href="/post/{{id}}" class="btn btn-primary">{{comments.length}} {{format_plural "comment" comments.length}}</a>
        </div>
    </div>